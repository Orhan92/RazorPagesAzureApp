name: Windows Container Node Workflow

on: workflow_dispatch

jobs:
  build:
    runs-on: windows-latest

    steps:
    - uses: actions/checkout@v2
    - uses: azure/docker-login@v1
      with:
        login-server: razorpagescosmosdb.azurecr.io
        username: ${{ secrets.REGISTRY_USERNAME }}
        password: ${{ secrets.REGISTRY_PASSWORD }}
    - run: |
        docker build . -t razorpagescosmosdb.azurecr.io/musicapp:${{ github.sha }}
        docker push razorpagescosmosdb.azurecr.io/musicapp:${{ github.sha }}
        
    - uses: azure/webapps-deploy@v2
      with:
        app-name: 'musicapp'
        publish-profile: ${{ secrets.AZURE_WEBAPP_PUBLISH_PROFILE }}
        images: 'razorpagescosmosdb.azurecr.io/musicapp:${{ github.sha }}'
